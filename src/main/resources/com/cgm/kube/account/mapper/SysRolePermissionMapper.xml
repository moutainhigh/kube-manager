<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cgm.kube.account.mapper.SysRolePermissionMapper">
    <resultMap type="com.cgm.kube.account.entity.SysRolePermission" id="BaseMap">
    </resultMap>

    <!--根据权限id列出具有该权限的角色-->
    <select id="listRolesByPermissionId" resultType="java.lang.String">
        SELECT
          sr.code
        FROM
          sys_role_permission srp
          LEFT JOIN sys_role sr ON srp.role_id = sr.id
        WHERE
          srp.permission_id = #{permission_id}
    </select>

</mapper>